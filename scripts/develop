#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

echo "ğŸ¼ [develop] Starting Home Assistant development environment in $(pwd)"

# Create config dir if not present
if [[ ! -d "${PWD}/config" ]]; then
    echo "ğŸ“ [develop] Creating config directory..."
    mkdir -p "${PWD}/config"
    echo "âš™ï¸ [develop] Ensuring Home Assistant config..."
    uv run hass --config "${PWD}/config" --script ensure_config
    echo "âœ… [develop] Config directory ready."
fi

# Set the path to custom_components
echo "ğŸ”§ [develop] Setting PYTHONPATH for custom_components..."
export PYTHONPATH="${PYTHONPATH}:${PWD}/custom_components"

# Start Home Assistant
echo "ğŸš€ [develop] Starting Home Assistant with debug mode..."
uv run hass --config "${PWD}/config" --debug
